{
  "name": "hire-tutor",
  "version": "1.0.0",
  "description": "Hire-Tutor is a platform that connects students with tutors. It is a platform that allows students to hire tutors for their academic needs. It is a platform that allows tutors to get hired by students for their academic needs.",
  "scripts": {
    "dev": "ts-node-dev --respawn ./src/index.ts",
    "build": "rimraf dist && tsc",
    "start": "node ./dist/index.js",
    "lint": "eslint --max-warnings 0 . && npm run tsc",
    "lint-fix": "eslint --fix .",
    "tsc": "tsc --noEmit",
    "format-lint": "prettier --config .prettierrc -l --ignore-unknown .",
    "format-fix": "prettier --config .prettierrc --write --ignore-unknown .",
    "test": "mocha --require ts-node/register 'src/**/*.test.ts' --timeout 20000 --exit",
    "commit": "git-cz"
  },
  "engines": {
    "node": ">=14.0.0"
  },
