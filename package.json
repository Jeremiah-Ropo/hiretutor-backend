    "lint-staged": "^13.2.3",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^3.0.1",
    "pretty-quick": "^3.1.3",
    "supertest": "^6.3.3",
    "ts-node": "10.9.1",
