    "lint-fix": "eslint --fix .",
    "tsc": "tsc --noEmit",
    "format-lint": "prettier --config .prettierrc -l --ignore-unknown .",
    "format-fix": "prettier --config .prettierrc --write --ignore-unknown .",
    "test": "mocha --require ts-node/register 'src/**/*.test.ts' --timeout 20000 --exit",
    "commit": "git-cz"
  },
  "engines": {
    "node": ">=14.0.0"
  },
